def compute_avg_with_handicap(score1, score2, score3, handicap):
    avg_score = (score1 + score2 + score3) / 3
    avg_with_handicap = avg_score + handicap
    return avg_score, avg_with_handicap
lname = input("Enter bowler's last name: ")
score1 = int(input("Enter score for game 1: "))
score2 = int(input("Enter score for game 2: "))
score3 = int(input("Enter score for game 3: "))
handicap = int(input("Enter handicap: "))

avg_score, avg_with_handicap = compute_avg_with_handicap(score1, score2, score3, handicap)

print("Bowler:", lname)
print("Average Score:", avg_score)
print("Average Score with Handicap:", avg_with_handicap)